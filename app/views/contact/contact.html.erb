<!-- Banner Section -->
<%= render 'shared/banner' %>

<!-- Navbar Section -->
<%= render 'shared/navbar' %>

<!-- Flash Message -->
<%= render 'shared/flashes' %>

<!-- Contact Section -->
<section class="min-h-screen bg-cover bg-center" style="background-image: url('<%= asset_path('contact2.jpg') %>');">
  <div class="flex flex-col min-h-screen bg-black/30">
    <div class="container flex flex-col flex-1 px-6 py-12 mx-auto">
      <div class="flex-1 lg:flex lg:items-center lg:-mx-6">
        <div class="text-white bg-gray-700 bg-opacity-80 shadow-2xl rounded-xl lg:w-1/2 lg:mx-6 p-12">
          <h1 class="text-3xl font-semibold capitalize lg:text-3xl">Contact us</h1>

          <p class="max-w-xl mt-6 text-xl">Feel free to reach out to us anytime.</p>
          <p class="max-w-xl mt-6 text-xl">We are here to assist you and look forward to hearing from you!</p>
          
          <div class="mt-6 space-y-8 md:mt-8">
            <p class="flex items-start -mx-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>

              <span class="mx-2 truncate text-xl">
              6500 Silver Dart Drive<br>Unit 202, Vista Cargo Core A<br>Mississauga, Ontario<br>L5P 1A2
            </span>
            </p>

            <p class="flex items-start -mx-2  text-xl">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>

              <span class="mx-2 truncate text-xl">+1 (905) 677-2796</span>
            </p>

            <p class="flex items-start -mx-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>

              <a href="mailto:TFG-Trade@trustfreightglobal.com" class="mx-2 text-xl truncate hover:text-blue-300">TFG-Trade@trustfreightglobal.com</a>
            </p>
          </div>
        </div>

        <div class="mt-8 lg:w-1/2 lg:mx-6">
          <div class="w-full px-8 py-10 mx-auto overflow-hidden bg-white shadow-2xl rounded-xl lg:max-w-xl">
            <h1 class="text-3xl font-medium text-gray-700">Contact Form</h1>

            <%= form_with(model: @contact, url: contact_path, local: true) do |form| %>
              <div class="flex-1">
                <%= form.label :first_name, class: "block mb-2 text-sm text-gray-600 text-xl required" %>
                <%= form.text_field :first_name, placeholder: "Your First Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :last_name, class: "block mb-2 text-sm text-gray-600 text-xl required" %>
                <%= form.text_field :last_name, placeholder: "Your Last Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :services, class: "block mb-2 text-sm text-gray-600 text-xl required" %>
                <%= form.select :services, options_for_select([['Air', 'Air'], ['Ocean', 'Ocean'], ['Other services', 'Other services']], 'Air'), {}, class: "block w-full px-5 py-3 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :email, class: "block mb-2 text-sm text-gray-600 text-xl required" %>
                <%= form.email_field :email, placeholder: "youremail@example.com", class: "block w-full px-5 py-3 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :phone, class: "block mb-2 text-sm text-gray-600 text-xl" %>
                <%= form.text_field :phone, placeholder: "(123) 456-7890", class: "block w-full px-5 py-3 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" %>
              </div>

              <div class="w-full mt-6">
                <%= form.label :subject, class: "block mb-2 text-sm text-gray-600 text-xl required" %>
                <%= form.text_field :subject, placeholder: "Subject", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="w-full mt-6">
                <%= form.label :message, class: "block mb-2 text-sm text-gray-600 text-xl required" %>
                <%= form.text_area :message, placeholder: "Message here...", class: "block w-full h-24 px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md md:h-24 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring", required: true %>
              </div>

              <%= form.submit "Get in touch", class: "w-full px-6 py-3 mt-6 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

