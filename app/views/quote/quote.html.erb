<!-- Quote Form -->
<%= form_with(model: @quote, url: quote_path, local: true) do |form| %>
  <div class="mx-auto max-w-screen-2xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16 space-y-12">
    <div class="border-b border-gray-900/10 pb-12">
      <h1 class="text-center font-semibold text-gray-900 text-2xl">Package / Cargo Information</h1>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-1 sm:col-start-1">
          <%= form.label :mode_of_transport, "Mode of Transportation", class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="mt-2">
            <%= form.select :mode_of_transport, options_for_select([['Air', 'Air'], ['Sea', 'Sea']]), {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm/6" %>
          </div>
        </div>
      </div>

      <!-- Air Content -->
      <div id="airContent" class="dynamicFormDiv mt-8 w-full">
        <div id="productRows">
          <%= form.fields_for :products do |product_form| %>
            <div class="productRow form-row mt-2 flex flex-wrap gap-x-6 gap-y-8">
              <!-- Commodity -->
              <div class="flex-1">
                <%= product_form.label :product_name, "Commodity", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.text_field :product_name, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Quantity -->
              <div class="flex-1">
                <%= product_form.label :product_quantity, "Quantity", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.number_field :product_quantity, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Description -->
              <div class="flex-1">
                <%= product_form.label :type_of_goods, "Description", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.text_field :type_of_goods, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Length -->
              <div class="flex-1">
                <%= product_form.label :length, "Gross Length (in.)", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.number_field :length, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Width -->
              <div class="flex-1">
                <%= product_form.label :width, "Gross Width (in.)", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.number_field :width, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Height -->
              <div class="flex-1">
                <%= product_form.label :height, "Gross Height (in.)", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.number_field :height, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Weight -->
              <div class="flex-1">
                <%= product_form.label :weight, "Gross Weight (lbs.)", class: "mb-2 text-sm/6 font-medium text-gray-900" %>
                <div class="mt-2">
                  <%= product_form.number_field :weight, class: "w-40 form-input px-4 py-2 border border-gray-300 rounded-md", placeholder: "" %>
                </div>
              </div>

              <!-- Reserve for remove button -->
              <div class="flex-1"></div>
            </div>
          <% end %>
        </div>

        <!-- Add Row Button -->
        <div class="mt-4">
