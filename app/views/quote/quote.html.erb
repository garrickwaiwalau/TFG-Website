<script>
    // Hiding Banner
    function hideBanner() {
        var banner = document.getElementById('banner');
        banner.style.display = 'none';
    }

    // Hiding flash message
    function hideFlash() {
        var flash_message = document.getElementById('flash_message');
        flash_message.style.display = 'none';
    }

    // Function to remove a row on quote page
    function removeRow(button) {
        const row = button.closest('.form-row');
        row.remove();
    }

    // Get the select element and content sections
    const mode_of_transport = document.getElementById('quote_mode_of_transport');
    const airContent = document.getElementById('airContent');
    const seaContent = document.getElementById('seaContent');

    // Function to toggle the content based on selected mode of transport
    function toggleContent() {
        // Hide both sections initially
        airContent.classList.add('hidden');
        seaContent.classList.add('hidden');

        // Show content based on selection
        if (mode_of_transport.value === 'Air') {
            airContent.classList.remove('hidden');
        } else if (mode_of_transport.value === 'Sea') {
