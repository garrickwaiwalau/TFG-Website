                <%= form.text_field :first_name, placeholder: "Your First Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :last_name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200 text-xl required" %>
                <%= form.text_field :last_name, placeholder: "Your Last Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200 text-xl required" %>
                <%= form.email_field :email, placeholder: "youremail@example.com", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="flex-1 mt-6">
                <%= form.label :phone, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200 text-xl" %>
                <%= form.text_field :phone, placeholder: "(123) 456-7890", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
              </div>

              <div class="w-full mt-6">
                <%= form.label :subject, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200 text-xl required" %>
                <%= form.text_field :subject, placeholder: "Subject", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring", required: true %>
              </div>

              <div class="w-full mt-6">
                <%= form.label :message, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200 text-xl required" %>
                <%= form.text_area :message, placeholder: "Message here...", class: "block w-full h-32 px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md md:h-48 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring", required: true %>
              </div>

              <%= form.submit 'Get in touch', class: "w-full px-6 py-3 mt-6 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

